{
  "expo": {
    "name": "Clockaburra App",
    "slug": "clockaburra_app",
    "description": "An employee app for viewing schedules, clocking in/out, and tracking hours worked",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/logoClockaburra.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "Esta aplicación necesita acceso a la cámara para tomar fotos.",
        "NSPhotoLibraryUsageDescription": "Esta aplicación necesita acceso a la galería para seleccionar fotos.",
        "NSPhotoLibraryAddUsageDescription": "Esta aplicación necesita permiso para guardar fotos en tu galería."
      },
      "bundleIdentifier": "n"
    },
    "android": {
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "package": "com.facuvillarroel.clockaburra_app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": ["expo-font"],
    "extra": {
      "eas": {
        "projectId": "93c60588-26e3-4468-bbad-30db4c3cf0f4"
      },
      "BACKEND_IP": "https://clockaburra-restful-api.vercel.app"
    }
  }
}
